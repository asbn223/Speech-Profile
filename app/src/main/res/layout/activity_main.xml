<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="8dp"
        android:layout_y="10dp"
        android:background="#F6F8FA"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:srcCompat="@mipmap/ic_launcher_foreground"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textXML"
        android:layout_width="376dp"
        android:layout_height="220dp"
        android:layout_x="3dp"
        android:layout_y="140dp"
        android:gravity="center"
        android:hint="Please Speak"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/languageXML"
        android:layout_width="281dp"
        android:layout_height="48dp"
        android:layout_below="@id/textXML"
        android:layout_centerVertical="true"
        android:layout_marginTop="60dp"
        android:layout_x="123dp"
        android:layout_y="11dp"
        android:gravity="center"
        android:hint="Language"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_x="146dp"
        android:layout_y="411dp"
        android:background="@drawable/button_background"
        android:cropToPadding="true" />

</AbsoluteLayout>